# AI RAG Service Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Groq API Key for LLM processing
GROQ_API_KEY=your_groq_api_key_here

# Optional: SerpAPI for real-time web search
SERPAPI_KEY=your_serpapi_key_here

# Optional: MongoDB for conversation storage
MONGODB_URI=mongodb://localhost:27017/glinax_chatbot_db
DB_NAME=glinax_chatbot_db

# Optional: OpenAI API as fallback
OPENAI_API_KEY=your_openai_api_key_here

# Service Configuration
HOST=0.0.0.0
PORT=8000